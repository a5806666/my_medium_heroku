<div class="container is-fluid">
    <h1 class='title'>記事一覧</h1>
    <hr> 
    <% @stories.each do |story| %>
        <div class="content">
            <h2 class="title">
                <%= link_to story.title, edit_story_path(story), class: 'has-text-grey-darker' %>
                <%= content_tag :span, '記事公開中！', class: 'tag is-primary' if story.published?  %>
            </h2>
            <p> <%= story.content %> </p>
            <p>
                最後編集時間：<%= time_ago_in_words(story.updated_at) %>
                <%= link_to '再編集', edit_story_path(story), class: 'button is-outlined is-small' %>
                <%= link_to '削除', story, method: 'delete', class: 'button is-danger is-small', data: { confirm: '記事を削除します。
よろしいですか？' } %> 
            </p>
        </div>
        <hr>  
    <% end %>
    <%= paginate @stories, window: 1 %>
</div>